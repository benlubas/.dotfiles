{
  "title": "Goto Application",
  "rules": [
    {
      "description": "Launch/go to application with control + option + key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": [
                "left_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e \"tell application \\\"Alacritty\\\" to activate\""
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "left_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e \"tell application \\\"Brave Browser\\\" to activate\""
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "left_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e \"tell application \\\"Spotify\\\" to activate\""
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "left_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e \"tell application \\\"Discord\\\" to activate\""
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": ",",
            "modifiers": {
              "mandatory": [
                "left_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e \"tell application \\\"System Settings\\\" to activate\""
            }
          ]
        }
      ]
    }
  ]
}
