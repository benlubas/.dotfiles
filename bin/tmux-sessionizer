#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
  selected=$1
else
  # this sed command doesn't work on mac's version of sed, so we need gsed
  sed=$(command -v gsed || command -v sed)
  selected=$(find ~/github ~/notes -mindepth 1 -maxdepth 1 -type d | grep -v '.git$' | $sed -e "$ a $HOME\/github" | fzf)
fi

if [[ -z $selected ]]; then
  exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [ $TERM_PROGRAM = "tmux" ] && [[ -z $tmux_running ]]; then
  tmux new-session -s $selected_name -c $selected\; \
  rename-window "Main Nvim"\; \
  neww -n shell\; \
  select-window -t 0\;

  exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
  tmux new-session -ds $selected_name -c $selected\;
fi

if [ $TERM_PROGRAM = "tmux" ]; then
  tmux switch-client -t $selected_name
else
  tmux attach -t $selected_name
fi
